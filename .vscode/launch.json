    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo publisher launch",
            "cargo": {
                "args": [
                    "build",
                    "--example=publisher"
                ]
            },
            "program": "${cargo:program}",
            "args": []
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo subscribemsg launch",
            "cargo": {
                "args": [
                    "build",
                    "--example=standalone_subscriber"
                ]
            },
            "program": "${cargo:program}",
            "args": []
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo publishermsg launch",
            "cargo": {
                "args": [
                    "build",
                    "--example=standalone_publisher"
                ]
            },
            "program": "${cargo:program}",
            "args": []
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'opcua_pubsub'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=opcua_pubsub"
                ],
                "filter": {
                    "name": "opcua_pubsub",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}